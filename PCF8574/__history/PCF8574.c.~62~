#INCLUDE<16F887.h>
#FUSES XT,PUT,NOPROTECT,BROWNOUT,NOLVP,NOWDT
#USE delay(internal=8000000)
#USE I2C(MASTER, SDA=PIN_C4, SLOW, SCL=PIN_C3, NOFORCE_SW)
#use standard_io(c)

#BYTE PORTA=5;
#BYTE PORTB=6;

#DEFINE btn PORTA,0
/***************************Variables globales********************************/
unsigned int data=0;
void main(){
set_tris_b(0b11111110);
set_tris_a(0b01111111);
output_low(PIN_A7);
while(true){
   
   output_low(PIN_A7);
     
   while(bit_test(btn)){
      output_high(PIN_A7);
      i2c_start();
      i2c_write(0x71);
      data=i2c_read(1);
      PORTB=data;
      i2c_stop();
      delay_ms(1);
   }
}
}
